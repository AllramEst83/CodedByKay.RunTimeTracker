<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterTemplate.MainPage"
             xmlns:viewmodel="clr-namespace:MasterTemplate.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             BackgroundColor="#2ecc71">

    <VerticalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="20">

        <Label Text="{Binding GoalReached}" FontSize="30" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,0,0,25"/>
        <Label Text="{Binding ClearedDistance}" FontSize="30" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,0,0,25"/>
        
        <Entry Placeholder="Skriv distans i km" IsVisible="{Binding IsVisble}" FontSize="20" Text="{Binding TargetDistance}" Keyboard="Numeric" />

        <Button Text="Start Tracking" IsEnabled="{Binding IsActive}" WidthRequest="370" Command="{Binding StartTrackingCommand}" FontSize="20" BackgroundColor="#3498db" TextColor="Black" Margin="0,5,0,8"/>
        <Button Text="Stop Tracking" WidthRequest="370" Command="{Binding StopTrackingCommand}" FontSize="20" BackgroundColor="#e74c3c" TextColor="Black"/>
        
    </VerticalStackLayout>

</ContentPage>
