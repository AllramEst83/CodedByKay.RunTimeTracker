<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MasterTemplate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MasterTemplate.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Run distance tracker">
    
    
    <!-- Tab Bar for Bottom Navigation -->
    <TabBar
        Shell.ForegroundColor="#303952"
        Shell.BackgroundColor="{StaticResource App_Primary_Background}"
        Shell.TitleColor="#303952"
        Shell.DisabledColor="#95a5a6"
        Shell.UnselectedColor="#7f8c8d"
        >
        <!-- First Tab: Home -->
        <Tab Title="Track distance" Icon="pinpin.png">
            <ShellContent
                Title="Distance"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>

        <!-- Second Tab: Settings (example) -->
        <Tab Title="Track session" Icon="userrunning.png">
            <ShellContent
                Title="Session"
                ContentTemplate="{DataTemplate local:RunSessionPage}"
                Route="RunSessionPage"/>
        </Tab>

        <!-- Add more tabs as needed -->
    </TabBar>

</Shell>
